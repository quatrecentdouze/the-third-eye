{
  "name": "the-third-eye-ui",
  "version": "1.1.9",
  "description": "Premium desktop UI for the-third-eye monitoring agent",
  "author": "tlmreact",
  "main": "electron/main.js",
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "build": "vite build && electron-builder",
    "preview": "vite build && electron ."
  },
  "build": {
    "appId": "com.thirdEye.monitor",
    "productName": "the-third-eye",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../build/the_third_eye.exe",
        "to": "agent/the_third_eye.exe"
      },
      {
        "from": "../img/icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "The Third Eye",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "quatrecentdouze",
      "repo": "the-third-eye"
    }
  },
  "dependencies": {
    "electron-store": "^6.0.1",
    "electron-updater": "^6.6.2",
    "fontnotawesome": "^1.1.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}